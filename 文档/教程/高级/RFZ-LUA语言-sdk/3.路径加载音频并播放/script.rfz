*start
#initgametitle(音频播放)
#initpack(NULL,NULL,NULL,NULL,NULL,NULL)
#initlua()

*newgame

*luabegin
local img = LoadImage("0.jpg",RFZLUA.IMG_8888);--加载图片
local snd = LoadSound("Lia - My Soul, Your Beats!.mp3");--加载音频
SetSoundVol(snd,128);--设置音量
PlaySound(snd,0);--循环播放
while 1 do
BeginScene(1);--开始绘图
DrawImage(img,0,0);--画图
EndScene();--结束绘图
end
FreeImage(img);--释放img内存
FreeSound(snd);--释放音频
*luaend

*end